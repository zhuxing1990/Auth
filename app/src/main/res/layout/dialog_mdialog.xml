<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/mdialog_layout"
    android:minWidth="420dp"
    android:minHeight="210dp"
    android:background="@drawable/layout_dialog_top_shape">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="210dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:gravity="left"
            android:text="@string/prompt"
            android:textColor="@color/color_white2"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_block1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="9dp" >

            <TextView
                android:id="@+id/mdialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_white3"
                android:textSize="26sp" />
        </LinearLayout>

        <Button
            android:id="@+id/mdialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/common_btn_sel2"
            android:text="@string/confirm"
            android:layout_weight="1"
            android:textColor="@color/color_white2"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>